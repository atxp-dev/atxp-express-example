{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["backend/**", "frontend/build/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/backend/server.ts"
    }
  ],
  "installCommand": "npm run install-all && npm run build",
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "backend/server.ts": {
      "maxDuration": 30
    }
  }
}
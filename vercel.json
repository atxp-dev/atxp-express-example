{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.ts",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "nodejs20.x",
        "includeFiles": ["frontend/build/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/backend/server.ts"
    }
  ],
  "installCommand": "npm run setup",
  "buildCommand": "npm run build",
  "env": {
    "NODE_ENV": "production"
  }
}
{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.ts",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "nodejs20.x"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/backend/server.ts"
    }
  ],
  "installCommand": "npm run install-all",
  "buildCommand": "NODE_ENV=production npm run build && cp -r frontend/build backend/",
  "env": {
    "NODE_ENV": "production"
  }
}